<p id="notice"><%= notice %></p>

<div class="container">
    <div class="row">
        <div class="col s12"> 
          <h1>Facultades 
          <a href="faculties/new" class="waves-effect waves-light btn-floating btn-large green darken-1">+</a>
          </h1>
          <table class="striped centered responsive-table">
            <thead>
              <tr>
                <th>Cod</th>
                <th>Nombre</th>
                <th colspan="3">Opciones</th>
              </tr>
            </thead>
            <tbody>
              <% @faculties.each do |faculty| %>
                <tr>
                  <td><%= faculty.cod %></td>
                  <td><%= faculty.name %></td>
                  <td><%= link_to 'Mostrar', faculty ,class: 'btn black'%></td>
                  <td><%= link_to 'Editar', edit_faculty_path(faculty) ,class: 'btn black'%></td>
                  <td><%= button_to 'Eliminar', faculty, :method => :delete,class: 'btn red'%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
       </div>
    </div>
</div>

